<?xml version="1.0" encoding="UTF-8"?>
<pretty-config xmlns="http://ocpsoft.com/prettyfaces/3.3.3"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://ocpsoft.com/prettyfaces/3.3.3
                                   http://ocpsoft.com/xml/ns/prettyfaces/ocpsoft-pretty-faces-3.3.3.xsd">
    <url-mapping id="home">
        <pattern value="/home"/>
        <view-id value="/home.xhtml"/>
        <action onPostback="false">#{slotController.initViewSlots}</action>
    </url-mapping>

    <url-mapping id="createSlot">
        <pattern value="/slots/new"/>
        <view-id value="/slot/form.xhtml"/>
        <action onPostback="false">#{slotController.initCreateSlot}</action>
    </url-mapping>

    <url-mapping id="viewSlot">
        <pattern value="/slots/#{slotId : slotController.slotId}"/>
        <view-id value="/slot/view.xhtml"/>
        <action onPostback="false">#{slotController.initViewAndEditSlot}</action>
    </url-mapping>

    <url-mapping id="editSlot">
        <pattern value="/slots/edit/#{slotId : slotController.slotId}"/>
        <view-id value="/slot/form.xhtml"/>
        <action onPostback="false">#{slotController.initViewAndEditSlot}</action>
    </url-mapping>

    <url-mapping id="viewUser">
        <pattern value="/users/#{slotId : userController.userId}"/>
        <view-id value="/user/view.xhtml"/>
         <action onPostback="false">#{userController.initViewUser}</action>
    </url-mapping>
</pretty-config>
