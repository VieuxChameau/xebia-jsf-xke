<?xml version="1.0" encoding="UTF-8"?>
<pretty-config xmlns="http://ocpsoft.com/prettyfaces/3.3.3"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://ocpsoft.com/prettyfaces/3.3.3
                                   http://ocpsoft.com/xml/ns/prettyfaces/ocpsoft-pretty-faces-3.3.3.xsd">
    <url-mapping id="home">
        <pattern value="/home"/>
        <view-id value="/home.xhtml"/>
        <action onPostback="false">#{slotManager.initList}</action>
    </url-mapping>

    <url-mapping id="createSlot">
        <pattern value="/slot/create"/>
        <view-id value="/createSlot.xhtml"/>
    </url-mapping>
    
    <url-mapping id="viewSlot">
        <pattern value="/slot/view/#{slotId : slotManager.slotId}"/>
        <view-id value="/viewSlot.xhtml"/>
        <action onPostback="false">#{slotManager.initView}</action>
    </url-mapping>
    
    <url-mapping id="editSlot">
        <pattern value="/slot/edit/#{slotId : slotManager.slotId}"/>
        <view-id value="/editSlot.xhtml"/>
        <action onPostback="false">#{slotManager.initView}</action>
    </url-mapping>

</pretty-config>
